{
    "manifest_version": 3,
    "name": "Gmail AI Email Summarizer",
    "description": "Shows a TL;DR summary for long emails in Gmail.",
    "version": "1.0",
    "icons": {
      "128": "icons/icon128.png"
    },
    "permissions": [],
    "content_scripts": [
      {
        "matches": ["https://mail.google.com/*"],
        "js": ["summarizer.js", "content.js"],
        "css": ["styles.css"],
        "run_at": "document_idle"
      }
    ]
  }
  